<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!--Renaming default team and creating sales teams for all of the other stores-->
  <record model="crm.team" id="sales_team.team_sales_department">
    <field name="name">B2B</field>
  </record>
  <record model="crm.team" id="team_hq_team">
      <field name="name">HQ Retail Sales</field>
      <field name="team_type">sales</field>
  </record>
  <record model="crm.team" id="team_mtv_team">
      <field name="name">MTV Retail Sales</field>
      <field name="team_type">sales</field>
  </record>
  <record model="crm.team" id="team_ext_team">
      <field name="name">EXT Retail Sales</field>
      <field name="team_type">sales</field>
  </record>
  <record model="crm.team" id="team_homeauto_team">
      <field name="name">Home Automation</field>
      <field name="team_type">sales</field>
  </record>
  <!--Creating Fiscal Positions for Every Store-->
  <record model="account.fiscal.position" id="account_fiscal_position_hq">
      <field name="name">HQ Tax Position</field>
  </record>
  <record model="account.fiscal.position" id="account_fiscal_position_mtv">
      <field name="name">MTV Tax Position</field>
  </record>
  <record model="account.fiscal.position" id="account_fiscal_position_ext">
      <field name="name">EXT Tax Position</field>
  </record>
  <!--Creating Analytic Accounts for Each Store-->
  <record model="account.analytic.account" id="analytic_account_hq">
      <field name="name">HQ Retail Sales</field>
  </record>
  <record model="account.analytic.account" id="analytic_account_mtv">
      <field name="name">MTV Retail Sales</field>
  </record>
  <record model="account.analytic.account" id="analytic_account_ext">
      <field name="name">EXT Retail Sales</field>
  </record>
  <!--Creating All Pos Configs for each team-->
  <record model="pos.config" id="point_of_sale.pos_config_main">
      <field name="name">HQ Retail</field>
      <field name="crm_team_id" ref="team_hq_team"/>
  </record>
  <record model="pos.config" id="pos_config_mtv">
      <field name="name">MTV Retail</field>
      <field name="crm_team_id" ref="team_mtv_team"/>
  </record>
  <record model="pos.config" id="pos_config_ext">
      <field name="name">EXT Retail</field>
      <field name="crm_team_id" ref="team_ext_team"/>
  </record>
  <!--Creating Trade In Operation Type-->
  <record model="ir.sequence" id="sequence_trade_in_hq">
      <field name="name">Trade In - Delivery Cancel</field>
      <field name="implementation">standard</field>
      <field name="padding">6</field>
      <field name="prefix">trade</field>
      <field name="number_increment">1</field>
      <field name="number_next_actual">1</field>
  </record>
  <record model="stock.picking.type" id="op_trade_in_hq">
      <field name="name">Trade In - Delivery Cancel</field>
      <field name="code">outgoing</field>
      <field name="sequence_id" ref="sequence_trade_in_hq"/>
  </record>
  <!--Creating Trade In Route-->
  <record model="procurement.rule" id="rule_cust_stock">
    <field name="name">Customer -> Stock</field>
    <field name="action">move</field>
    <field name="sequence">20</field>
    <field name="location_src_id" ref="stock.stock_location_customers"/>
    <field name="location_id" ref="stock.stock_location_stock"/>
    <field name="picking_type_id" ref="stock.picking_type_in"/>
    <field name="group_propagation_option">propagate</field>
    <field name="propagate" eval="True"/>
  </record>
  <record model="procurement.rule" id="rule_stock_cust">
    <field name="name">Stock -> Customer</field>
    <field name="action">move</field>
    <field name="sequence">20</field>
    <field name="location_src_id" ref="stock.stock_location_stock"/>
    <field name="procure_method">make_to_order</field>
    <field name="location_id" ref="stock.stock_location_customers"/>
    <field name="picking_type_id" ref="sm_custo_ps.op_trade_in_hq"/>
    <field name="group_propagation_option">propagate</field>
    <field name="propagate" eval="True"/>
  </record>
  <record model="stock.location.route" id="route_trade_in">
    <field name="name">HQ Trade In</field>
    <field name="company_id" ref="base.main_company"/>
    <field name="product_categ_selectable" eval="False"/>
    <field name="product_selectable" eval="False"/>
    <field name="warehouse_selectable" eval="False"/>
    <field name="sale_selectable" eval="True"/>
    <field name="sequence">1</field>
    <field name="pull_ids" eval="[(6, 0, [
      ref('rule_cust_stock'),
      ref('rule_stock_cust')
      ])]"/>
  </record>
